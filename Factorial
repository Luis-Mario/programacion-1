// ejemplo factorial.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

//Prototipos
int Factorial(int fac);

//Cuerpo principal
void main()
{
	int fac,N;
	
	cout<<"Ingresar un numero: ";
	cin>>N;
	
	//Llamar a la funcion
	fac=Factorial(N);
	cout<<"el factorial del numero: "<< N <<" es: "<<fac;
	getch();
}

int Factorial(int fac)
{
	int a;
	a=1;
	for (int i=1;i<=fac;i++)
		a=a*i;
	return a;
}

